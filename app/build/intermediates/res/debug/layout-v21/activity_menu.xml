<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/widget_toolbar" />

    <Button
        android:id="@+id/button_ver_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:minHeight="48dip"
        android:minWidth="300dip"
        android:onClick="verEventos"
        android:text="@string/app_button_see_event_title"
        android:textColor="@color/icons"
        android:layout_below="@+id/include_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:id="@+id/button_crear_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:minHeight="48dip"
        android:minWidth="300dip"
        android:onClick="userAuthentication"
        android:text="@string/app_button_create_event_title"
        android:textColor="@color/icons"
        android:layout_below="@+id/button_ver_eventos"
        android:layout_alignLeft="@+id/button_ver_eventos"
        android:layout_alignStart="@+id/button_ver_eventos"
        android:layout_marginTop="45dp" />

    <Button
        android:id="@+id/button_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:minHeight="48dip"
        android:minWidth="300dip"
        android:onClick="salir"
        android:text="@string/app_button_out_app"
        android:textColor="@color/icons"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/button_crear_eventos"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/home/elioth010/AndroidStudioProjects/EcoEventos/app/src/main/res/layout-v21/activity_menu.xml -->